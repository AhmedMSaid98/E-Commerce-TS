model Address {
    id         String   @id @default(cuid())
    user       User     @relation(fields: [userId], references: [id])
    userId     String   @unique
    address1   String
    address2   String?
    city       String
    state      String?
    country    String
    postalCode String
    createdAt  DateTime @default(now())
    isDeleted  Boolean  @default(false)

    @@index([address1, address2, city, state, country])
}
