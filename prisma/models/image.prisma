model ProductImage {
    id           String  @id @default(cuid())
    mimetype     String
    fileName     String
    path         String
    hashedBuffer String
    product      Product @relation(fields: [productId], references: [id])
    productId    Int
    user         User    @relation(fields: [userId], references: [id])
    userId       String

    @@unique([productId, hashedBuffer], name: "product_hash")
}

model UserImage {
    id           String @id @default(cuid())
    mimetype     String
    fileName     String
    path         String
    hashedBuffer String
    user         User   @relation(fields: [userId], references: [id])
    userId       String @unique
}
